<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/formback"
    tools:context=".presentation.Forms.SoloForm">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/instructionLinearLayout_SOLO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/aldrich"
            android:text="Members"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/memberName"
            android:layout_width="375dp"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/trans"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColorHint="@color/glass_purple" />

        <EditText
            android:id="@+id/memberRoll"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="200dp"
            android:background="@color/trans"
            android:ems="10"
            android:hint="Roll No."
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColorHint="@color/glass_purple" />

        <EditText
            android:id="@+id/memberEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/trans"
            android:ems="10"
            android:hint="Official Mail"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:paddingLeft="20dp"
            android:textColorHint="@color/glass_purple" />

        <EditText
            android:id="@+id/memberPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/trans"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="phone"
            android:minHeight="48dp"
            android:paddingLeft="20dp"
            android:textColorHint="@color/glass_purple" />

        <Button
            android:id="@+id/btnVerifySolo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="140dp"
            android:background="@drawable/formbtn"
            android:text="Register"
            android:textColor="@color/glass_purple" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/instructionLinearLayout_SOLO"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="6dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="6dp">

        <TextView
            android:id="@+id/instructionText_SOLO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FOR INSTRUCTION  ->"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/instructionBrn_SOLO"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HERE" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>