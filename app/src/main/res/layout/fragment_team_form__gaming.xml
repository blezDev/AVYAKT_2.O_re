<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".presentation.gaming.TeamForm_GamingFragment">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/back_col2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:paddingBottom="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/aldrich"
                        android:text="Members"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/Name2"
                        android:layout_width="375dp"
                        android:layout_height="54dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/trans"
                        android:ems="10"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/glass_purple" />

                    <EditText
                        android:id="@+id/roll2"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="200dp"
                        android:background="@color/trans"
                        android:ems="10"
                        android:hint="Roll No."
                        android:inputType="textPersonName"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/glass_purple" />

                    <EditText
                        android:id="@+id/email2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/trans"
                        android:ems="10"
                        android:hint="Official Mail"
                        android:inputType="textEmailAddress"
                        android:minHeight="48dp"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/glass_purple" />

                    <EditText
                        android:id="@+id/teamName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/trans"
                        android:ems="10"
                        android:hint="Team Name"
                        android:inputType="textEmailAddress"
                        android:minHeight="48dp"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/glass_purple" />

                    <EditText
                        android:id="@+id/phone2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/trans"
                        android:ems="10"
                        android:maxLength="10"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:minHeight="48dp"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"

                        android:textColorHint="@color/glass_purple" />


                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/FormRecycle1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="36dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

                <ImageView
                    android:id="@+id/addCard2"
                    android:layout_width="52dp"
                    android:layout_height="51dp"
                    android:background="?android:selectableItemBackground"
                    android:contentDescription="@string/add_form"
                    android:src="@drawable/add"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.955"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/FormRecycle1"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/SubmitFormBtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/formbtn"
                    android:text="Submit"
                    android:textColor="@color/glass_purple"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addCard2"
                    app:layout_constraintVertical_bias="0.0" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>